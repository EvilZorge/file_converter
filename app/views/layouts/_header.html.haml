%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    %nav
      %ul.nav.navbar-nav.navbar-left
        %li
          = link_to "File Converter", root_path, method: :get
        %li
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = t('locale_name')
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'English', url_for(locale: 'en'), method: :get
                = link_to 'Русский', url_for(locale: 'ru'), method: :get

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to t('files_history'), files_history_users_path, method: :get
                = link_to t('edit_account'), edit_user_registration_path, method: :get
              %li
                = link_to t('log_out'), destroy_user_session_path, method: :delete
        - else
          %li= link_to t('sign_up'), new_user_registration_path, method: :get
          %li= link_to t('sign_in'), new_user_session_path, method: :get
